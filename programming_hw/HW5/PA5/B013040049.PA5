#!/bin/sed -f
:L
  H 
  g
  /\n[^ [\\\n]*$/ bN	
  s/[^\n]*$//
  x
  s/.*\n//
  s/[[\\ ]/&\n/
  tX;:X
  s/ \n/[ \\n]\n/	
  s,\\\n\(.\),\\\1\n,
  tL
  s/\n^/^\n/
  s/\n]/]\n/
  :M
    H
    g
    s/[^\n]*$//
    x
    s/.*\n//
    /[] [\]/!q
    s/[]\\ ]/&\n/
    /\]\n/ bL
    s/ \n/ \\n\n/
    s,\\\n\(.\),\\\1\n,
    bM
:N
  s/\n//g
